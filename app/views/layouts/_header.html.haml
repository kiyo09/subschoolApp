.header
  .header-name

  .header-leftbox
    .header-leftbox__form
      = form_with(url: search_subschools_path, local:true, method: :get, class: "search-form") do |form|
        .header-leftbox__form__set
          = form.text_field :keyword, placeholder: "検索する", class: "search-input", required: true
          = form.submit "検索", class: "search-btn"

  .header-leftbox__tag
    = link_to "タグ検索", stags_path
  .header-rightbox
    - if user_signed_in?
      .header-rightbox__registar
        = link_to "マイページ", "/users/#{current_user.id}"
      .header-rightbox__login
        = link_to "ログアウト", destroy_user_session_path, method: :delete
    - else
      .header-rightbox__registar
        = link_to "新規登録", new_user_registration_path
      .header-rightbox__login
        = link_to "ログイン", user_session_path
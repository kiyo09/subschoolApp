= render "layouts/header"

.subschool__form
  = form_with model: @subschool, local: true do |f|
    .form-image
      = f.file_field :image, class: 'js-file'
    .form-name
      = f.text_field :name, placeholder: "name", required: true
    .form-description
      = f.text_area :description, placeholder: "description", required: true
    .form-tag
      = f.fields_for :subsc_tag_relations do |tag|
        = tag.collection_check_boxes :subsctag_id, @tag, :id,:tag
        = tag.hidden_field :subschool_id, value: @subschool.id 
    .check-button
      = f.submit "登録する", class: "check-button"
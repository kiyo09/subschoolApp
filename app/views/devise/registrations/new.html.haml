%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = render "devise/shared/error_messages", resource: resource
  .field
    = f.label :"ニックネーム(必須)"
    %br/
    = f.text_field :nickname, autofocus: true, autocomplete: "nickname"
  .field
    = f.label :"メールアドレス(必須)"
    %br/
    = f.email_field :email, autofocus: true, autocomplete: "email"
  .field
    = f.label :プロフィール画像
    %br/
    .user_image
      = image_tag "#{@user.image.url}", size: "120x120", id: :user_prev 
    %br/
    = f.file_field :image, autofocus: true, autocomplete: "email"
  .field
    = f.label :自己紹介
    %br/
    = f.text_field :intro, autofocus: true, autocomplete: "intro"
  .field
    = f.label :パスワード
    - if @minimum_password_length
      %em
        (#{@minimum_password_length} characters minimum)
    %br/
    = f.password_field :password, autocomplete: "new-password"
  .field
    = f.label :パスワード確認
    %br/
    = f.password_field :password_confirmation, autocomplete: "new-password"
  .actions
    = f.submit "Sign up"
